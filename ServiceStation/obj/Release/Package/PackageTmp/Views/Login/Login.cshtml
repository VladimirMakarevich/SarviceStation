@model ServiceStation.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <h1>
            Login
        </h1>
        <div class="col-md-8">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <p>
                    @Html.LabelFor(m => m.Login, new { @class = "control-label col-md-2" })
                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Login)
                </p>

                <p>
                    @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </p>

                @Html.AntiForgeryToken()

                <p>
                    <input type="submit" value="Login" class="btn btn-success btn-sm" />
                </p>
            }
        </div>
    </div>
</div>
