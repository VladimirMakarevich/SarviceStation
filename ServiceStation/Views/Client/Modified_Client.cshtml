                            <a href="@Url.Action("List_Client", "Client")" class="btn btn-info btn-sm"> Back to list of client</a>&nbsp;|&nbsp;
                           <input type="submit" value="Save" class="btn btn-success btn-sm" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>